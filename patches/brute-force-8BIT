 #warning FIXME: add proper quoted-printable recoding here
 		write(1, "Z4.6.3 message has 8 Bit characters but next server "
 				"does not accept 8BITMIME", 77);
 		quit();
 	}
+#endif
 
 	successmsg[2] = "";
 	netwrite("DATA\r\n");
